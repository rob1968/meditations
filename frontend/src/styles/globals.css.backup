/* ===== INBOX STYLING ===== */
.inbox-container {
  padding: var(--space-xl);
  max-width: 800px;
  margin: 0 auto;
  animation: fadeInUp 0.5s ease-out;
}

.inbox-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: var(--space-2xl);
  padding-bottom: var(--space-lg);
  border-bottom: 1px solid var(--glass-light);
}

.inbox-header h2 {
  font-size: 32px;
  font-weight: 700;
  background: linear-gradient(135deg, #ff6b6b, #feca57, #48dbfb);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  text-align: center;
  margin: 0;
}

.unread-badge {
  background: linear-gradient(135deg, #ff6b6b, #feca57);
  color: white;
  font-size: 14px;
  font-weight: 700;
  padding: 6px 12px;
  border-radius: 20px;
  box-shadow: 0 4px 15px rgba(255, 107, 107, 0.3);
  animation: pulse 2s infinite;
}

.inbox-controls {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: var(--space-2xl);
  flex-wrap: wrap;
  gap: var(--space-md);
}

.filter-buttons {
  display: flex;
  background: var(--glass-light);
  border-radius: 16px;
  padding: 4px;
  backdrop-filter: blur(10px);
  border: 1px solid rgba(255, 255, 255, 0.1);
}

.filter-btn {
  background: transparent;
  border: none;
  color: var(--text-secondary);
  padding: 10px 20px;
  border-radius: 12px;
  font-size: 14px;
  font-weight: 500;
  cursor: pointer;
  transition: all 0.3s ease;
  white-space: nowrap;
}

.filter-btn.active {
  background: var(--glass-medium);
  color: var(--text-primary);
  transform: translateY(-1px);
  box-shadow: 0 4px 12px rgba(255, 255, 255, 0.1);
}

.filter-btn:hover {
  color: var(--text-primary);
  transform: translateY(-1px);
}

.mark-all-read-btn {
  background: rgba(34, 197, 94, 0.2);
  border: 1px solid rgba(34, 197, 94, 0.3);
  color: rgb(34, 197, 94);
  padding: 10px 20px;
  border-radius: 12px;
  font-size: 14px;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.3s ease;
  backdrop-filter: blur(10px);
}

.mark-all-read-btn:hover {
  background: rgba(34, 197, 94, 0.3);
  transform: translateY(-2px);
  box-shadow: 0 6px 20px rgba(34, 197, 94, 0.2);
}

.empty-inbox {
  text-align: center;
  padding: var(--space-3xl) var(--space-xl);
  background: var(--glass-light);
  border-radius: 24px;
  backdrop-filter: blur(20px);
  border: 1px solid rgba(255, 255, 255, 0.1);
  margin-top: var(--space-2xl);
}

.empty-icon {
  font-size: 64px;
  margin-bottom: var(--space-lg);
  opacity: 0.6;
}

.empty-inbox h3 {
  color: var(--text-primary);
  font-size: 24px;
  margin-bottom: var(--space-md);
  font-weight: 600;
}

.empty-inbox p {
  color: var(--text-secondary);
  font-size: 16px;
  line-height: 1.6;
}

.notifications-list {
  display: flex;
  flex-direction: column;
  gap: var(--space-lg);
}

.notification-card {
  background: var(--glass-light);
  border-radius: 20px;
  padding: var(--space-xl);
  backdrop-filter: blur(20px);
  border: 1px solid rgba(255, 255, 255, 0.1);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.notification-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4px;
  background: linear-gradient(90deg, rgba(255, 255, 255, 0.2), transparent);
  opacity: 0;
  transition: opacity 0.3s ease;
}

.notification-card:hover {
  transform: translateY(-4px);
  box-shadow: 0 12px 40px rgba(0, 0, 0, 0.3);
  border-color: rgba(255, 255, 255, 0.2);
}

.notification-card:hover::before {
  opacity: 1;
}

.notification-card.unread {
  background: var(--glass-medium);
  border-left: 4px solid #ff6b6b;
  box-shadow: 0 8px 32px rgba(255, 107, 107, 0.15);
}

.notification-card.unread::before {
  background: linear-gradient(90deg, #ff6b6b, #feca57, #48dbfb);
  opacity: 1;
}

.notification-content {
  flex: 1;
}

.notification-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: var(--space-md);
  flex-wrap: wrap;
  gap: var(--space-sm);
}

.notification-title {
  color: var(--text-primary);
  font-size: 18px;
  font-weight: 600;
  line-height: 1.4;
}

.notification-date {
  color: var(--text-tertiary);
  font-size: 12px;
  font-weight: 500;
  opacity: 0.8;
}

.notification-message {
  color: var(--text-secondary);
  font-size: 16px;
  line-height: 1.6;
  margin-bottom: var(--space-md);
}

.moderation-notes {
  background: rgba(255, 193, 7, 0.1);
  border-left: 4px solid rgba(255, 193, 7, 0.5);
  padding: var(--space-md);
  border-radius: 8px;
  margin: var(--space-md) 0;
  font-size: 14px;
  color: var(--text-secondary);
}

.moderation-notes strong {
  color: rgba(255, 193, 7, 0.9);
}

.notification-meditation {
  margin-top: var(--space-md);
}

.meditation-ref {
  display: inline-flex;
  align-items: center;
  gap: var(--space-xs);
  background: var(--glass-light);
  padding: 8px 12px;
  border-radius: 12px;
  font-size: 14px;
  color: var(--text-secondary);
  border: 1px solid rgba(255, 255, 255, 0.1);
}

.notification-card {
  display: flex;
  align-items: flex-start;
  gap: var(--space-lg);
}

.notification-actions {
  display: flex;
  gap: var(--space-sm);
  flex-shrink: 0;
}

.mark-read-btn, .delete-btn {
  background: var(--glass-light);
  border: 1px solid rgba(255, 255, 255, 0.1);
  color: var(--text-secondary);
  padding: 10px;
  border-radius: 12px;
  cursor: pointer;
  transition: all 0.3s ease;
  font-size: 16px;
  width: 44px;
  height: 44px;
  display: flex;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(10px);
}

.mark-read-btn:hover {
  background: rgba(34, 197, 94, 0.2);
  border-color: rgba(34, 197, 94, 0.3);
  color: rgb(34, 197, 94);
  transform: translateY(-2px);
  box-shadow: 0 4px 12px rgba(34, 197, 94, 0.2);
}

.delete-btn:hover {
  background: rgba(239, 68, 68, 0.2);
  border-color: rgba(239, 68, 68, 0.3);
  color: rgb(239, 68, 68);
  transform: translateY(-2px);
  box-shadow: 0 4px 12px rgba(239, 68, 68, 0.2);
}

.loading-spinner {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: var(--space-3xl);
  color: var(--text-secondary);
  font-size: 16px;
  gap: var(--space-lg);
}

.spinner {
  width: 40px;
  height: 40px;
  border: 3px solid rgba(255, 255, 255, 0.1);
  border-top: 3px solid #ff6b6b;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

.error-message {
  background: rgba(239, 68, 68, 0.1);
  border: 1px solid rgba(239, 68, 68, 0.3);
  color: rgb(239, 68, 68);
  padding: var(--space-lg);
  border-radius: 12px;
  text-align: center;
  font-size: 16px;
  margin: var(--space-2xl) 0;
}

@keyframes pulse {
  0% { transform: scale(1); }
  50% { transform: scale(1.05); }
  100% { transform: scale(1); }
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* Mobile responsiveness voor inbox */
@media (max-width: 768px) {
  .inbox-container {
    padding: var(--space-lg);
  }

  .inbox-header h2 {
    font-size: 28px;
  }

  .inbox-controls {
    flex-direction: column;
    align-items: stretch;
  }

  .filter-buttons {
    justify-content: center;
  }

  .notification-card {
    flex-direction: column;
    gap: var(--space-md);
    padding: var(--space-lg);
  }

  .notification-header {
    flex-direction: column;
    align-items: flex-start;
    gap: var(--space-xs);
  }

  .notification-actions {
    align-self: flex-end;
  }

  .empty-icon {
    font-size: 48px;
  }

  .empty-inbox h3 {
    font-size: 20px;
  }

  .empty-inbox p {
    font-size: 14px;
  }
}

/* ===== AUTH STYLING ===== */
.auth-container {
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 100vh;
  padding: var(--space-lg);
  background: var(--gradient-background);
  background-attachment: fixed;
  position: relative;
  overflow: hidden;
}

.auth-container::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: radial-gradient(ellipse at center, rgba(255, 107, 107, 0.1) 0%, rgba(72, 219, 251, 0.1) 50%, rgba(102, 126, 234, 0.1) 100%);
  animation: authGradientShift 8s ease-in-out infinite alternate;
  pointer-events: none;
}

.auth-card {
  background: var(--glass-light);
  backdrop-filter: blur(25px);
  border-radius: 24px;
  padding: var(--space-3xl);
  border: 1px solid rgba(255, 255, 255, 0.15);
  box-shadow: 
    0 20px 60px rgba(0, 0, 0, 0.4),
    inset 0 1px 0 rgba(255, 255, 255, 0.2);
  width: 100%;
  max-width: 420px;
  position: relative;
  animation: authCardSlideUp 0.8s cubic-bezier(0.16, 1, 0.3, 1);
  overflow: hidden;
}

.auth-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4px;
  background: linear-gradient(90deg, #ff6b6b, #feca57, #48dbfb, #667eea);
  background-size: 400% 400%;
  animation: authRainbow 3s ease infinite;
}

.auth-header {
  text-align: center;
  margin-bottom: var(--space-3xl);
  animation: authFadeInDown 0.8s ease-out 0.2s both;
}

.auth-header h2 {
  font-size: 32px;
  font-weight: 700;
  margin-bottom: var(--space-sm);
  background: linear-gradient(135deg, #ff6b6b, #feca57, #48dbfb);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  background-size: 200% 200%;
  animation: authTextGradient 4s ease infinite;
}

.auth-header p {
  color: var(--text-secondary);
  font-size: 16px;
  font-weight: 500;
  opacity: 0.9;
}

.auth-form {
  margin-bottom: var(--space-2xl);
  animation: authFadeInUp 0.8s ease-out 0.4s both;
}

.form-group {
  margin-bottom: var(--space-xl);
}

.form-group label {
  display: block;
  color: var(--text-primary);
  font-size: 14px;
  font-weight: 600;
  margin-bottom: var(--space-sm);
  text-transform: uppercase;
  letter-spacing: 0.5px;
  opacity: 0.9;
}

.auth-input {
  width: 100%;
  background: rgba(255, 255, 255, 0.08);
  border: 2px solid rgba(255, 255, 255, 0.1);
  border-radius: 16px;
  padding: 16px 20px;
  color: var(--text-primary);
  font-size: 16px;
  font-weight: 500;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  backdrop-filter: blur(10px);
  outline: none;
}

.auth-input:focus {
  border-color: rgba(255, 107, 107, 0.5);
  box-shadow: 
    0 0 0 4px rgba(255, 107, 107, 0.1),
    0 8px 25px rgba(0, 0, 0, 0.15);
  background: rgba(255, 255, 255, 0.12);
  transform: translateY(-2px);
}

.auth-input::placeholder {
  color: var(--text-tertiary);
  font-weight: 400;
}

.auth-input:valid {
  border-color: rgba(34, 197, 94, 0.4);
}

.auth-button {
  width: 100%;
  background: linear-gradient(135deg, #ff6b6b 0%, #feca57 50%, #48dbfb 100%);
  background-size: 200% 200%;
  border: none;
  border-radius: 16px;
  padding: 18px 24px;
  color: white;
  font-size: 16px;
  font-weight: 700;
  cursor: pointer;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  text-transform: uppercase;
  letter-spacing: 0.5px;
  box-shadow: 0 8px 25px rgba(255, 107, 107, 0.3);
  position: relative;
  overflow: hidden;
  animation: authGradientMove 3s ease infinite;
}

.auth-button::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
  transition: left 0.5s;
}

/* Hover only for devices that support it */
@media (hover: hover) {
  .auth-button:hover::before {
    left: 100%;
  }

  .auth-button:hover {
    transform: translateY(-3px);
    box-shadow: 0 12px 35px rgba(255, 107, 107, 0.4);
    background-position: 100% 0;
  }
}

/* Touch-friendly feedback */
.auth-button:active {
  transform: scale(0.98);
  box-shadow: 0 4px 15px rgba(255, 107, 107, 0.5);
}


.auth-button:disabled {
  opacity: 0.6;
  cursor: not-allowed;
  transform: none;
  box-shadow: 0 4px 15px rgba(255, 107, 107, 0.2);
}

.auth-button .loading-spinner {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: var(--space-sm);
}

.auth-button .spinner {
  width: 20px;
  height: 20px;
  border: 2px solid rgba(255, 255, 255, 0.3);
  border-top: 2px solid white;
  border-radius: 50%;
  animation: authSpinnerSpin 1s linear infinite;
}

.auth-switch {
  text-align: center;
  animation: authFadeInUp 0.8s ease-out 0.6s both;
}

.auth-switch p {
  color: var(--text-secondary);
  font-size: 14px;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: var(--space-sm);
  flex-wrap: wrap;
}

.switch-button {
  background: none;
  border: none;
  color: #ff6b6b;
  font-size: 14px;
  font-weight: 700;
  cursor: pointer;
  text-decoration: none;
  transition: all 0.3s ease;
  padding: 4px 8px;
  border-radius: 8px;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

.switch-button:hover {
  color: #feca57;
  background: rgba(255, 107, 107, 0.1);
  transform: translateY(-1px);
}

.auth-switch .error-message {
  background: rgba(239, 68, 68, 0.15);
  border: 1px solid rgba(239, 68, 68, 0.3);
  color: rgb(239, 68, 68);
  padding: var(--space-md);
  border-radius: 12px;
  font-size: 14px;
  font-weight: 500;
  margin: var(--space-lg) 0;
  text-align: center;
  backdrop-filter: blur(10px);
  animation: authErrorSlide 0.4s ease-out;
}

