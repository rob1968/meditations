  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
}

.voice-record-button:disabled {
  opacity: 0.6;
  cursor: not-allowed;
}

@keyframes recording-pulse {
  0%, 100% { 
    transform: scale(1);
    box-shadow: 0 0 0 0 rgba(34, 197, 94, 0.7);
