/* Community cards use meditation card style with additions */
.meditation-card.community-card {
  margin-bottom: var(--space-md);
}

.meditation-card.community-card .meditation-info {
  gap: var(--space-md);
}

.meditation-card.community-card .meditation-author {
  margin-left: 0;
}

.meditation-card.community-card .meditation-text {
  margin-top: var(--space-sm);
}

.meditation-card.community-card .meditation-description {
  color: var(--text-secondary);
  font-size: 13px;
}

/* Like button styling for community */
.meditation-controls .like-button {
  background: var(--glass-medium);
  border: none;
  border-radius: 20px;
  padding: 6px 12px;
  display: flex;
  align-items: center;
  gap: 6px;
  cursor: pointer;
  transition: all 0.3s ease;
  font-size: 12px;
  color: var(--text-primary);
  position: absolute;
  top: var(--space-md);
  right: var(--space-md);
