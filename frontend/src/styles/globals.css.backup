}

.entry-slide-meta {
  display: flex;
  gap: 16px;
  align-items: center;
}

.entry-slide-meta span {
  background: rgba(255, 255, 255, 0.08);
  padding: 8px 12px;
  border-radius: 12px;
  font-size: 0.9rem;
  font-weight: 500;
  color: var(--text-secondary);
  display: flex;
  align-items: center;
  gap: 6px;
  border: 1px solid rgba(255, 255, 255, 0.1);
}

.entry-date-meta {
  background: linear-gradient(135deg, rgba(139, 69, 19, 0.15), rgba(139, 69, 19, 0.1)) !important;
  color: var(--accent-color) !important;
  border-color: rgba(139, 69, 19, 0.2) !important;
  font-weight: 600 !important;
