  padding: 2px 6px;
  border-radius: 8px;
  backdrop-filter: blur(10px);
  transition: all 0.3s ease;
  min-width: 32px;
  text-align: center;
}

.tempo-mark.active .tempo-mark-value {
  background: var(--glass-medium);
