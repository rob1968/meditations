  overflow: hidden;
  flex-shrink: 0;
  background: var(--glass-light);
}

.admin-meditation-thumbnail img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  display: block;
}

.admin-meditation-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: var(--space-xs);
}

.admin-meditation-card:hover {
  background: var(--glass-medium);
  transform: translateY(-2px);
  box-shadow: 0 4px 16px rgba(0, 0, 0, 0.1);
}

.meditation-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: var(--space-md);
  gap: var(--space-md);
}

.meditation-header h4 {
  color: var(--text-primary);
  font-size: 18px;
  font-weight: 600;
  margin: 0;
  flex: 1;
  line-height: 1.3;
}

.meditation-badges {
  display: flex;
  gap: var(--space-xs);
  flex-shrink: 0;
  flex-wrap: wrap;
}

.type-badge {
  background: var(--gradient-card-1);
  color: white;
  padding: 4px var(--space-xs);
  border-radius: 12px;
  font-size: 11px;
  font-weight: 600;
  white-space: nowrap;
}

.language-badge {
  background: var(--gradient-card-2);
  color: white;
  padding: 4px var(--space-xs);
  border-radius: 12px;
  font-size: 11px;
  font-weight: 600;
  white-space: nowrap;
}

.meditation-description {
  color: var(--text-secondary);
  font-size: 14px;
  line-height: 1.5;
  margin-bottom: var(--space-md);
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.meditation-meta {
  display: flex;
  gap: var(--space-md);
  margin-bottom: var(--space-md);
  font-size: 12px;
  color: var(--text-tertiary);
  flex-wrap: wrap;
}

.moderation-notes {
  background: rgba(59, 130, 246, 0.1);
  border: 1px solid rgba(59, 130, 246, 0.2);
  border-radius: 8px;
  padding: var(--space-sm);
  margin-bottom: var(--space-md);
  font-size: 13px;
  color: var(--text-secondary);
}

.admin-actions {
  display: flex;
  gap: var(--space-xs);
  flex-wrap: wrap;
}

.view-btn, .approve-btn, .reject-btn {
  flex: 1;
  min-width: 80px;
  background: var(--glass-medium);
  border: none;
  border-radius: 8px;
  padding: var(--space-sm);
  color: var(--text-primary);
  font-size: 12px;
  font-weight: 500;
  cursor: pointer;
  transition: all 0.3s ease;
}

.view-btn:hover {
  background: var(--glass-light);
  transform: translateY(-1px);
}

.approve-btn {
  background: rgba(34, 197, 94, 0.2);
  border: 1px solid rgba(34, 197, 94, 0.3);
  color: rgb(34, 197, 94);
}

.approve-btn:hover {
  background: rgba(34, 197, 94, 0.3);
  transform: translateY(-1px);
}

.reject-btn {
  background: rgba(239, 68, 68, 0.2);
  border: 1px solid rgba(239, 68, 68, 0.3);
  color: rgb(239, 68, 68);
}

.reject-btn:hover {
  background: rgba(239, 68, 68, 0.3);
  transform: translateY(-1px);
}

/* Moderation Modal */
.moderation-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.9);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 2000;
  padding: var(--space-lg);
}

.moderation-content {
  background: var(--glass-dark);
  border-radius: 24px;
  max-width: 600px;
  width: 100%;
  max-height: 90vh;
  overflow-y: auto;
  backdrop-filter: blur(30px);
  border: 1px solid rgba(255, 255, 255, 0.1);
  box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
  position: relative;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: var(--space-xl) var(--space-xl) var(--space-lg) var(--space-xl);
  border-bottom: 1px solid rgba(255, 255, 255, 0.1);
}

.modal-header h3 {
  color: var(--text-primary);
  font-size: 22px;
  font-weight: 700;
  margin: 0;
}

.modal-body {
  padding: var(--space-xl);
}

.modal-body h4 {
  color: var(--text-primary);
  font-size: 20px;
  font-weight: 600;
  margin-bottom: var(--space-sm);
}

.modal-body .description {
  color: var(--text-secondary);
  font-size: 15px;
  line-height: 1.5;
  margin-bottom: var(--space-xl);
}

.detail-section {
  margin-bottom: var(--space-xl);
}

.detail-section h5 {
  color: var(--text-primary);
  font-size: 16px;
  font-weight: 600;
  margin-bottom: var(--space-md);
}

.text-preview {
  background: var(--glass-light);
  border-radius: 12px;
  padding: var(--space-lg);
  color: var(--text-secondary);
  font-size: 14px;
  line-height: 1.6;
  max-height: 200px;
  overflow-y: auto;
  border-left: 4px solid var(--gradient-card-1);
}

.text-preview-scrollable {
  max-height: 300px;
  backdrop-filter: blur(10px);
  white-space: pre-wrap;
}

.text-preview-scrollable::-webkit-scrollbar {
  width: 8px;
}

.text-preview-scrollable::-webkit-scrollbar-track {
  background: rgba(255, 255, 255, 0.1);
  border-radius: 4px;
}

.text-preview-scrollable::-webkit-scrollbar-thumb {
  background: rgba(255, 255, 255, 0.3);
  border-radius: 4px;
}

.text-preview-scrollable::-webkit-scrollbar-thumb:hover {
  background: rgba(255, 255, 255, 0.5);
}

.details-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: var(--space-sm);
  color: var(--text-secondary);
  font-size: 14px;
}

.audio-preview {
  width: 100%;
  border-radius: 8px;
  background: var(--glass-light);
  outline: none;
}

.moderation-section {
  background: var(--glass-light);
  border-radius: 16px;
  padding: var(--space-lg);
  border: 1px solid rgba(255, 255, 255, 0.1);
}

.moderation-section textarea {
  width: 100%;
  background: var(--glass-medium);
  border: 1px solid rgba(255, 255, 255, 0.1);
  border-radius: 8px;
  padding: var(--space-md);
  color: var(--text-primary);
  font-size: 14px;
  resize: vertical;
  min-height: 80px;
  margin-bottom: var(--space-lg);
}

.moderation-section textarea:focus {
  outline: none;
  border-color: rgba(255, 255, 255, 0.3);
  box-shadow: 0 0 0 2px rgba(255, 255, 255, 0.1);
}

.moderation-section textarea::placeholder {
  color: var(--text-tertiary);
}

.moderation-actions {
  display: flex;
  gap: var(--space-md);
}

.approve-btn-large, .reject-btn-large {
  flex: 1;
  background: var(--glass-medium);
  border: none;
  border-radius: 12px;
  padding: var(--space-md) var(--space-lg);
  color: var(--text-primary);
  font-size: 14px;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.3s ease;
  min-height: 44px;
}

.approve-btn-large {
  background: rgba(34, 197, 94, 0.2);
  border: 1px solid rgba(34, 197, 94, 0.3);
  color: rgb(34, 197, 94);
}

.approve-btn-large:hover:not(:disabled) {
  background: rgba(34, 197, 94, 0.3);
  transform: translateY(-2px);
}

.reject-btn-large {
  background: rgba(239, 68, 68, 0.2);
  border: 1px solid rgba(239, 68, 68, 0.3);
  color: rgb(239, 68, 68);
}

.reject-btn-large:hover:not(:disabled) {
  background: rgba(239, 68, 68, 0.3);
  transform: translateY(-2px);
}

.approve-btn-large:disabled, .reject-btn-large:disabled {
  opacity: 0.5;
  cursor: not-allowed;
  transform: none;
}

.existing-notes {
  background: rgba(156, 163, 175, 0.1);
  border: 1px solid rgba(156, 163, 175, 0.2);
  border-radius: 12px;
  padding: var(--space-lg);
  margin-top: var(--space-lg);
}

.existing-notes h5 {
  color: var(--text-primary);
  margin-bottom: var(--space-sm);
}

.existing-notes p {
  color: var(--text-secondary);
  margin-bottom: var(--space-sm);
  line-height: 1.5;
}

.note-date {
  font-size: 12px;
  color: var(--text-tertiary);
  font-style: italic;
}

/* Statistics Section Styling */
.statistics-section {
  background: var(--glass-light);
  backdrop-filter: blur(20px);
  border-radius: 20px;
  padding: var(--space-2xl);
  border: 1px solid var(--glass-medium);
  margin-bottom: var(--space-xl);
}

.statistics-header {
  text-align: center;
  margin-bottom: var(--space-2xl);
}

.statistics-header h3 {
  font-size: 28px;
  font-weight: 700;
  color: var(--text-primary);
  margin-bottom: var(--space-sm);
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.statistics-subtitle {
  color: var(--text-secondary);
  font-size: 14px;
  margin: 0;
}

.statistics-overview {
  margin-bottom: var(--space-2xl);
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  gap: var(--space-lg);
  margin-bottom: var(--space-2xl);
}

.stat-card {
  background: var(--glass-medium);
  backdrop-filter: blur(15px);
  border-radius: 16px;
  padding: var(--space-xl);
  border: 1px solid var(--glass-light);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.stat-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 3px;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.stat-card.primary::before {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.stat-card.secondary::before {
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
}

.stat-card.accent::before {
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
}

.stat-card.success::before {
  background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%);
}

.stat-card:hover {
  transform: translateY(-4px);
  box-shadow: 0 8px 32px rgba(0, 0, 0, 0.2);
}

.stat-card-header {
  display: flex;
  align-items: center;
  gap: var(--space-sm);
  margin-bottom: var(--space-md);
}

.stat-icon {
  font-size: 24px;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 48px;
  height: 48px;
  background: var(--glass-light);
  border-radius: 12px;
  backdrop-filter: blur(10px);
}

.stat-label {
  font-size: 14px;
  font-weight: 600;
  color: var(--text-secondary);
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

.stat-value.large {
  font-size: 36px;
  font-weight: 700;
  color: var(--text-primary);
  line-height: 1.2;
  margin-bottom: var(--space-xs);
}

.stat-sublabel {
  font-size: 12px;
  color: var(--text-tertiary);
  font-style: italic;
}

.stat-progress {
  width: 100%;
  height: 4px;
  background: var(--glass-dark);
  border-radius: 2px;
  overflow: hidden;
  margin-top: var(--space-sm);
}

.stat-progress-bar {
  height: 100%;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 2px;
  transition: width 0.8s ease;
}

.statistics-details {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
  gap: var(--space-lg);
}

.stat-detail-card {
  background: var(--glass-medium);
  backdrop-filter: blur(15px);
  border-radius: 16px;
  padding: var(--space-xl);
  border: 1px solid var(--glass-light);
  transition: all 0.3s ease;
}

.stat-detail-card:hover {
  transform: translateY(-2px);
  box-shadow: 0 6px 24px rgba(0, 0, 0, 0.15);
}

.stat-detail-header {
  display: flex;
  align-items: center;
  gap: var(--space-sm);
  margin-bottom: var(--space-lg);
}

.stat-detail-icon {
  font-size: 20px;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 40px;
  height: 40px;
  background: var(--glass-light);
  border-radius: 10px;
  backdrop-filter: blur(10px);
}

.stat-detail-header h4 {
  font-size: 18px;
  font-weight: 600;
  color: var(--text-primary);
  margin: 0;
}

.favorite-type-display {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: var(--glass-light);
  border-radius: 12px;
  padding: var(--space-lg);
}

.favorite-type-name {
  font-size: 20px;
  font-weight: 600;
  color: var(--text-primary);
}

.favorite-type-badge {
  font-size: 32px;
  filter: drop-shadow(0 2px 4px rgba(0, 0, 0, 0.2));
}

.breakdown-chart {
  display: flex;
  flex-direction: column;
  gap: var(--space-md);
}

.breakdown-item {
  background: var(--glass-light);
  border-radius: 12px;
  padding: var(--space-md);
  transition: all 0.3s ease;
}

.breakdown-item:hover {
  background: var(--glass-medium);
  transform: translateX(4px);
}

.breakdown-item-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: var(--space-sm);
}

.breakdown-type {
  display: flex;
  align-items: center;
  gap: var(--space-sm);
}

.breakdown-emoji {
  font-size: 18px;
}

.breakdown-name {
  font-size: 14px;
  font-weight: 600;
  color: var(--text-primary);
}

.breakdown-stats {
  display: flex;
  align-items: center;
  gap: var(--space-xs);
}

.breakdown-count {
  font-size: 16px;
  font-weight: 700;
  color: var(--text-primary);
}

.breakdown-percentage {
  font-size: 12px;
  color: var(--text-tertiary);
  font-style: italic;
}

.breakdown-progress {
  width: 100%;
  height: 6px;
  background: var(--glass-dark);
  border-radius: 3px;
  overflow: hidden;
}

.breakdown-progress-bar {
  height: 100%;
  border-radius: 3px;
  transition: width 0.8s ease;
}

/* Mobile responsive for statistics */
@media (max-width: 768px) {
  .statistics-section {
    padding: var(--space-lg);
  }
  
  .stats-grid {
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: var(--space-md);
  }
  
  .stat-card {
    padding: var(--space-lg);
  }
  
  .stat-value.large {
    font-size: 28px;
  }
  
  .statistics-details {
    grid-template-columns: 1fr;
  }
  
  .stat-detail-card {
    padding: var(--space-lg);
  }
  
  .favorite-type-display {
    flex-direction: column;
    gap: var(--space-sm);
    text-align: center;
  }
  
  .breakdown-item-header {
    flex-direction: column;
    align-items: flex-start;
    gap: var(--space-xs);
  }
  
  .breakdown-stats {
    align-self: flex-end;
  }
}

@media (max-width: 480px) {
  .stats-grid {
    grid-template-columns: 1fr;
  }
  
  .statistics-header h3 {
    font-size: 24px;
  }
  
  .stat-card-header {
    flex-direction: column;
    align-items: center;
    text-align: center;
  }
}

/* Mobile responsive for admin */
@media (max-width: 414px) {
  .admin-tabs {
    flex-direction: column;
    gap: 4px;
  }
  
  .admin-tab {
    width: 100%;
  }
  
  .meditation-header {
    flex-direction: column;
    align-items: flex-start;
    gap: var(--space-sm);
  }
  
  .meditation-badges {
    align-self: flex-start;
  }
  
  .details-grid {
    grid-template-columns: 1fr;
  }
  
  .moderation-actions {
    flex-direction: column;
  }
  
  .moderation-modal {
    padding: var(--space-md);
  }
  
  .modal-header,
  .modal-body {
    padding: var(--space-lg);
  }
}

/* Community Hub - Enhanced Style */
