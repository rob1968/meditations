  overflow: hidden !important;
}

/* Auth Language Selector Styles */
.auth-language-selector {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: var(--glass-light);
  backdrop-filter: blur(15px);
  border: 1px solid var(--glass-border);
  border-radius: 16px;
  padding: 16px 20px;
  margin: 20px 0;
  max-width: 400px;
  margin-left: auto;
  margin-right: auto;
  box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
}

.language-selector-label {
  display: flex;
  align-items: center;
  gap: 10px;
  color: var(--text-primary);
  font-weight: 600;
  font-size: 15px;
}

.language-icon {
  font-size: 18px;
  filter: drop-shadow(0 1px 2px rgba(0, 0, 0, 0.2));
}

.language-text {
  font-size: 15px;
  white-space: nowrap;
}

.auth-language-select {
  background: var(--glass-medium);
  border: 1px solid var(--glass-border);
  border-radius: 12px;
  padding: 10px 14px;
  font-size: 14px;
  color: var(--text-primary);
  cursor: pointer;
  transition: all 0.3s ease;
  min-width: 180px;
  backdrop-filter: blur(10px);
  font-weight: 500;
}

.auth-language-select:hover {
  background: var(--glass-high);
  border-color: var(--accent-color);
  transform: translateY(-1px);
  box-shadow: 0 4px 16px rgba(107, 70, 193, 0.2);
}

.auth-language-select:focus {
  outline: none;
  border-color: var(--accent-color);
  box-shadow: 0 0 0 3px rgba(107, 70, 193, 0.2);
  background: var(--glass-high);
}

/* LocationSelector integration with forms */
.form-group .location-selector {
  width: 100%;
}

.form-group .location-selector-input {
  font-family: var(--font-primary);
  font-size: 16px;
  border: 2px solid var(--glass-border);
  background: var(--glass-medium);
  color: var(--text-primary);
  border-radius: 12px;
  transition: all 0.3s ease;
}

.form-group .location-selector-input:focus {
  border-color: var(--accent-color);
  box-shadow: 0 0 0 3px rgba(107, 70, 193, 0.2);
  background: var(--glass-high);
}

.form-group .location-selector-dropdown {
  background: var(--glass-dark);
  backdrop-filter: blur(15px);
  border: 2px solid var(--glass-border);
  border-radius: 0 0 12px 12px;
  box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
}

.form-group .location-selector-item {
  color: var(--text-primary);
  border-bottom: 1px solid var(--glass-border);
  font-weight: 500;
}

.form-group .location-selector-item:hover {
  background: var(--glass-medium);
}

.form-group .location-selector-item.highlighted {
  background: var(--accent-color);
  color: white;
}

/* Responsive design for auth language selector */
@media (max-width: 768px) {
  .auth-language-selector {
    flex-direction: column;
    gap: 12px;
    text-align: center;
  }
  
  .auth-language-select {
    width: 100%;
    min-width: unset;
  }
