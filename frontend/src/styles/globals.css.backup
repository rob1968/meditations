}

@keyframes slideInLeft {
  from { opacity: 0; transform: translateX(-30px); }
  to { opacity: 1; transform: translateX(0); }
}

.timeline-entry::before {
  content: '';
  position: absolute;
  left: -32px;
  top: 24px;
  width: 16px;
  height: 16px;
  background: linear-gradient(135deg, var(--accent-color), var(--accent-dark));
