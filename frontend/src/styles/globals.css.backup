.flex-end { display: flex; align-items: flex-end; }

.grid { display: grid; }
.grid-auto { grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); }
.gap-1 { gap: var(--space-xs); }
.gap-2 { gap: var(--space-sm); }
.gap-3 { gap: var(--space-md); }
.gap-4 { gap: var(--space-lg); }

/* Text Utilities */
.text-center { text-align: center; }
.text-left { text-align: left; }
.text-right { text-align: right; }
.text-primary { color: var(--text-primary); }
.text-secondary { color: var(--text-secondary); }
.text-tertiary { color: var(--text-tertiary); }

/* Background Utilities */
.bg-glass-light { background: var(--glass-light); }
.bg-glass-medium { background: var(--glass-medium); }
.bg-glass-dark { background: var(--glass-dark); }

/* Gradient Utilities */
.bg-gradient-primary { background: var(--gradient-card-3); }
.bg-gradient-secondary { background: var(--gradient-card-2); }
.bg-gradient-accent { background: var(--gradient-card-1); }
.bg-gradient-danger { background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%); }
.bg-gradient-success { background: linear-gradient(135deg, #10b981 0%, #059669 100%); }
.bg-gradient-warning { background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%); }
.bg-gradient-info { background: linear-gradient(135deg, #06b6d4 0%, #0891b2 100%); }

/* Button Gradient Utilities */
.btn-gradient-primary { 
  background: var(--gradient-card-3);
  color: white;
  border: none;
  padding: var(--space-sm) var(--space-lg);
  border-radius: var(--radius-md);
  cursor: pointer;
  transition: all var(--duration-normal) var(--easing-smooth);
}
.btn-gradient-primary:hover { 
  transform: translateY(-2px);
  box-shadow: var(--shadow-lg);
}

/* Border Radius Utilities */
.rounded-sm { border-radius: var(--radius-sm); }
.rounded { border-radius: var(--radius-md); }
.rounded-lg { border-radius: var(--radius-lg); }
.rounded-xl { border-radius: var(--radius-xl); }
.rounded-2xl { border-radius: var(--radius-2xl); }
.rounded-full { border-radius: var(--radius-full); }

/* Typography Utilities */
.text-xs { font-size: var(--text-xs); }
.text-sm { font-size: var(--text-sm); }
.text-base { font-size: var(--text-base); }
.text-lg { font-size: var(--text-lg); }
.text-xl { font-size: var(--text-xl); }
.text-2xl { font-size: var(--text-2xl); }
.text-3xl { font-size: var(--text-3xl); }
.text-4xl { font-size: var(--text-4xl); }

.font-light { font-weight: 300; }
.font-normal { font-weight: 400; }
.font-medium { font-weight: 500; }
.font-semibold { font-weight: 600; }
.font-bold { font-weight: 700; }

/* Shadow Utilities */
.shadow-sm { box-shadow: var(--shadow-sm); }
.shadow-md { box-shadow: var(--shadow-md); }
.shadow-lg { box-shadow: var(--shadow-lg); }
.shadow-xl { box-shadow: var(--shadow-xl); }
.shadow-glass { box-shadow: var(--shadow-glass); }

/* Common Component Patterns */
.glass-card {
  background: var(--glass-light);
  backdrop-filter: blur(10px);
  border: 1px solid var(--glass-medium);
  border-radius: var(--radius-lg);
  padding: var(--space-lg);
  box-shadow: var(--shadow-glass);
  transition: all var(--duration-normal) var(--easing-smooth);
}

.glass-card:hover {
  transform: translateY(-2px);
  box-shadow: var(--shadow-xl);
}

.glass-button {
  background: var(--glass-light);
  backdrop-filter: blur(10px);
  border: none;
  border-radius: var(--radius-md);
  color: var(--text-primary);
  padding: var(--space-sm) var(--space-lg);
  cursor: pointer;
  transition: all var(--duration-normal) var(--easing-smooth);
  font-weight: 500;
}

.glass-button:hover {
  background: var(--glass-medium);
  transform: translateY(-2px);
  box-shadow: var(--shadow-md);
}

.glass-button:active {
  transform: translateY(0);
  box-shadow: var(--shadow-sm);
}

/* Form Utilities */
.form-group {
  margin-bottom: var(--space-lg);
}

.form-label {
  display: block;
  color: var(--text-secondary);
  font-size: var(--text-sm);
  font-weight: 500;
  margin-bottom: var(--space-xs);
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

.form-input {
  width: 100%;
  background: var(--glass-light);
  border: 1px solid var(--glass-medium);
  border-radius: var(--radius-md);
  padding: var(--space-sm) var(--space-md);
  color: var(--text-primary);
  font-size: var(--text-base);
  transition: all var(--duration-normal) var(--easing-smooth);
}

.form-input:focus {
  outline: none;
  border-color: var(--gradient-card-3);
  background: var(--glass-medium);
  box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.15);
}

.form-error {
  color: #ef4444;
  font-size: var(--text-sm);
  margin-top: var(--space-xs);
}

.btn-primary {
  background: var(--gradient-card-3);
  color: white;
  border: none;
  padding: var(--space-sm) var(--space-lg);
  border-radius: var(--radius-md);
  font-weight: 500;
  cursor: pointer;
  transition: all var(--duration-normal) var(--easing-smooth);
}

.btn-primary:hover {
  transform: translateY(-2px);
  box-shadow: var(--shadow-lg);
}

.btn-secondary {
  background: var(--glass-light);
  color: var(--text-primary);
  border: 1px solid var(--glass-medium);
  padding: var(--space-sm) var(--space-lg);
  border-radius: var(--radius-md);
  font-weight: 500;
  cursor: pointer;
  transition: all var(--duration-normal) var(--easing-smooth);
}

.btn-secondary:hover {
  background: var(--glass-medium);
  transform: translateY(-1px);
}

/* Loading States */
.loading-spinner {
  width: 20px;
  height: 20px;
  border: 2px solid var(--glass-medium);
  border-top-color: var(--text-primary);
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

.loading-spinner.small {
  width: 16px;
  height: 16px;
  border-width: 2px;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

/* Additional Patterns */
.modal-backdrop {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.7);
  backdrop-filter: blur(5px);
  z-index: 9999;
}

.gradient-text {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

/* Width/Height Utilities */
.w-full { width: 100%; }
.w-1\/2 { width: 50%; }
.w-1\/3 { width: 33.333333%; }
.w-2\/3 { width: 66.666667%; }
.w-1\/4 { width: 25%; }
.w-3\/4 { width: 75%; }

.h-full { height: 100%; }
.min-h-screen { min-height: 100vh; }

/* Responsive Utilities */
.block { display: block; }
.inline-block { display: inline-block; }
.inline { display: inline; }
.hidden { display: none; }

/* Mobile-specific utilities */
@media (max-width: 768px) {
  .md\:hidden { display: none; }
  .md\:block { display: block; }
  .md\:flex { display: flex; }
  
  .md\:text-xs { font-size: var(--text-xs); }
  .md\:text-sm { font-size: var(--text-sm); }
  .md\:text-base { font-size: var(--text-base); }
  
  .md\:p-2 { padding: var(--space-sm); }
  .md\:p-3 { padding: var(--space-md); }
  .md\:p-4 { padding: var(--space-lg); }
  
  .md\:m-2 { margin: var(--space-sm); }
  .md\:m-3 { margin: var(--space-md); }
  .md\:m-4 { margin: var(--space-lg); }
  
  .md\:rounded { border-radius: var(--radius-md); }
  .md\:rounded-lg { border-radius: var(--radius-lg); }
}

/* Position Utilities */
.relative { position: relative; }
.absolute { position: absolute; }
.fixed { position: fixed; }

/* Animation Utilities */
.transition-all { transition: all var(--duration-normal) var(--easing-smooth); }
.transition-fast { transition: all var(--duration-fast) var(--easing-smooth); }
.transition-slow { transition: all var(--duration-slow) var(--easing-smooth); }

/* Transform Utilities */
.scale-95 { transform: scale(0.95); }
.scale-105 { transform: scale(1.05); }
.translate-y-1 { transform: translateY(-4px); }
.translate-y-2 { transform: translateY(-8px); }

/* Interactive States */
.hover-lift:hover {
  transform: translateY(-2px);
  box-shadow: var(--shadow-lg);
}

.hover-scale:hover {
  transform: scale(1.02);
}

.active-press:active {
  transform: scale(0.98);
}

/* Force cache update */
.cache-bust-2024 {
  display: none;
}

/* =========================
   DAGBOEK (JOURNAL) STYLING
   ========================= */

/* Inline Journal Form - Dagboek Style */
.inline-journal-form {
  background: #f8f5f0;
  border-radius: var(--radius-md);
  padding: var(--space-xl);
  margin-bottom: var(--space-xl);
  border: 3px solid #8b4513;
  box-shadow: 
    0 8px 32px rgba(0, 0, 0, 0.15),
    inset 0 1px 0 rgba(255, 255, 255, 0.8),
    inset 0 -1px 0 rgba(139, 69, 19, 0.2);
  position: relative;
  background-image: 
    repeating-linear-gradient(
      transparent,
      transparent 26px,
      rgba(139, 69, 19, 0.1) 26px,
      rgba(139, 69, 19, 0.1) 27px
    );
}

/* Dagboek binding effect */
.inline-journal-form::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  width: 40px;
  background: linear-gradient(90deg, 
    #654321 0%, 
    #8b4513 50%, 
    #654321 100%);
  border-radius: var(--radius-md) 0 0 var(--radius-md);
  box-shadow: inset -2px 0 4px rgba(0, 0, 0, 0.2);
}

/* Dagboek holes/rings */
.inline-journal-form::after {
  content: '';
  position: absolute;
  left: 20px;
  top: 30px;
  width: 8px;
  height: 8px;
  background: #2c1810;
  border-radius: 50%;
  box-shadow: 
    0 40px 0 #2c1810,
    0 80px 0 #2c1810,
    0 120px 0 #2c1810,
    0 160px 0 #2c1810;
}

/* Content spacing for binding */
.inline-journal-form > * {
  margin-left: 50px;
}

.inline-journal-form .form-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: var(--space-lg);
  padding-bottom: var(--space-md);
  margin-left: 50px; /* Space for binding */
  border-bottom: 2px solid #d4af37;
}

.inline-journal-form textarea {
  width: calc(100% - 50px);
  background: #ffffff !important;
  border: 1px solid #d4af37 !important;
  border-radius: var(--radius-sm) !important;
  padding: var(--space-lg) !important;
  color: #2c1810 !important;
  font-size: var(--text-base) !important;
  font-weight: 400 !important;
  line-height: 1.8 !important;
  transition: all var(--duration-normal) ease !important;
  resize: vertical !important;
  min-height: 160px !important;
  box-shadow: 
    inset 0 2px 4px rgba(139, 69, 19, 0.1),
    0 2px 8px rgba(0, 0, 0, 0.1) !important;
  font-family: 'Georgia', 'Times New Roman', serif !important;
  letter-spacing: 0.3px !important;
}

.inline-journal-form textarea:focus {
  outline: none !important;
  border-color: #b8860b !important;
  background: #ffffff !important;
  box-shadow: 
    0 0 0 3px rgba(212, 175, 55, 0.3),
    inset 0 2px 4px rgba(139, 69, 19, 0.1),
    0 4px 12px rgba(0, 0, 0, 0.15) !important;
  transform: translateY(-1px) !important;
}

.inline-journal-form textarea::placeholder {
  color: #8b7355 !important;
  font-style: italic !important;
  opacity: 0.7 !important;
}

/* Journal form textarea in all contexts */
.journal-form textarea,
.expanded-journal-form textarea {
  background: #ffffff !important;
  border: 1px solid #d4af37 !important;
  border-radius: var(--radius-sm) !important;
  padding: var(--space-lg) !important;
