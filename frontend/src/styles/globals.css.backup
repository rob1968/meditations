  height: 36px;
  border-radius: 50%;
  background: linear-gradient(135deg, rgba(139, 69, 19, 0.1), rgba(139, 69, 19, 0.05));
  border: 1px solid rgba(139, 69, 19, 0.2);
  color: var(--accent-color);
  font-size: 1.4rem;
  font-weight: bold;
  cursor: pointer;
  transition: all 0.3s ease;
  display: flex;
  align-items: center;
  justify-content: center;
  user-select: none;
}

.page-nav-btn:hover:not(:disabled) {
  background: linear-gradient(135deg, var(--accent-color), var(--accent-dark));
  color: white;
  transform: translateY(-2px);
  box-shadow: 0 6px 16px rgba(139, 69, 19, 0.3);
}

.page-nav-btn:disabled {
  opacity: 0.3;
  cursor: not-allowed;
  transform: none;
}

.page-indicator {
  font-size: 0.85rem;
  color: var(--accent-color);
  font-weight: 600;
  font-family: 'Georgia', serif;
  padding: 4px 12px;
  background: rgba(139, 69, 19, 0.08);
  border-radius: 12px;
  border: 1px solid rgba(139, 69, 19, 0.15);
}

/* Page Progress Dots */
.page-dots {
  display: flex;
  justify-content: center;
  gap: 8px;
  margin-top: 12px;
  flex-wrap: wrap;
}

.page-dot {
  width: 8px;
  height: 8px;
  border-radius: 50%;
  background: rgba(139, 69, 19, 0.2);
  border: 1px solid rgba(139, 69, 19, 0.3);
  cursor: pointer;
  transition: all 0.3s ease;
  position: relative;
}

.page-dot:hover {
  background: rgba(139, 69, 19, 0.4);
  transform: scale(1.2);
}

.page-dot.active {
  background: linear-gradient(135deg, var(--accent-color), var(--accent-dark));
  border-color: var(--accent-color);
  transform: scale(1.3);
  box-shadow: 0 2px 8px rgba(139, 69, 19, 0.4);
}

/* Book Page Texture Effect */
.book-page::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: 
    radial-gradient(circle at 20% 80%, rgba(139, 69, 19, 0.03) 0%, transparent 50%),
    radial-gradient(circle at 80% 20%, rgba(139, 69, 19, 0.03) 0%, transparent 50%);
  border-radius: 12px;
  pointer-events: none;
}

/* Paper Lines Effect (subtle) */
.book-page::after {
  content: '';
  position: absolute;
  top: 24px;
  left: 24px;
  right: 24px;
  bottom: 24px;
  background-image: repeating-linear-gradient(
    transparent,
    transparent 1.6rem,
    rgba(139, 69, 19, 0.05) 1.6rem,
    rgba(139, 69, 19, 0.05) calc(1.6rem + 1px)
  );
  border-radius: 8px;
  pointer-events: none;
  opacity: 0.3;
}

/* Slide Actions */
.entry-slide-actions {
  display: flex;
  gap: 16px;
  align-items: center;
  justify-content: flex-end;
}

.slide-action-btn {
  padding: 12px 20px;
  border-radius: 16px;
  border: 1px solid rgba(255, 255, 255, 0.2);
  cursor: pointer;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  font-size: 1rem;
  font-weight: 600;
  position: relative;
  overflow: hidden;
  backdrop-filter: blur(10px);
}

.slide-action-btn.primary {
  background: linear-gradient(135deg, var(--accent-color), var(--accent-dark));
  color: white;
  border-color: var(--accent-color);
  box-shadow: 0 8px 20px rgba(139, 69, 19, 0.3);
}

.slide-action-btn.secondary {
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.08), rgba(255, 255, 255, 0.04));
  color: var(--text-primary);
  border-color: rgba(255, 255, 255, 0.2);
}

.slide-action-btn:hover {
  transform: translateY(-2px);
  box-shadow: 0 12px 28px rgba(139, 69, 19, 0.4);
}

.slide-action-btn.secondary:hover {
  background: linear-gradient(135deg, var(--accent-color), var(--accent-dark));
  color: white;
  border-color: var(--accent-color);
}

.slide-action-btn span {
  position: relative;
  z-index: 1;
}

/* Navigation Arrows */
.slider-nav {
  width: 48px;
  height: 48px;
  border-radius: 50%;
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.1), rgba(255, 255, 255, 0.05));
  backdrop-filter: blur(20px);
  border: 1px solid rgba(255, 255, 255, 0.2);
  color: var(--text-primary);
  font-size: 1.2rem;
  cursor: pointer;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  overflow: hidden;
}

.slider-nav::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, var(--accent-color), var(--accent-dark));
  opacity: 0;
  transition: opacity 0.3s ease;
  border-radius: 50%;
}

.slider-nav:hover:not(:disabled) {
  transform: translateY(-2px) scale(1.05);
  box-shadow: 0 12px 25px rgba(139, 69, 19, 0.3);
  border-color: var(--accent-color);
  color: white;
}

.slider-nav:hover:not(:disabled)::before {
  opacity: 1;
}

.slider-nav:disabled {
  opacity: 0.3;
  cursor: not-allowed;
  transform: none;
}

.slider-nav span {
  position: relative;
  z-index: 1;
}

/* Dots Navigation */
.slider-dots {
  display: flex;
  justify-content: center;
  gap: 12px;
  margin-top: var(--space-lg);
  padding: 0 var(--space-md);
}

.slider-dot {
  width: 12px;
  height: 12px;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.2);
  border: 1px solid rgba(255, 255, 255, 0.3);
  cursor: pointer;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.slider-dot::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, var(--accent-color), var(--accent-dark));
  opacity: 0;
  transition: opacity 0.3s ease;
  border-radius: 50%;
}

.slider-dot:hover::before {
  opacity: 0.7;
}

.slider-dot.active {
  background: linear-gradient(135deg, var(--accent-color), var(--accent-dark));
  border-color: var(--accent-color);
  transform: scale(1.2);
  box-shadow: 0 4px 12px rgba(139, 69, 19, 0.4);
}

.slider-dot.active::before {
  opacity: 1;
}

