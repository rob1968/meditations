{
  "name": "meditation-app",
  "version": "1.0.0",
  "description": "Meditation audio generation application",
  "scripts": {
    "start": "concurrently --kill-others \"npm run backend\" \"npm run frontend\"",
    "dev": "concurrently --kill-others \"npm run backend:dev\" \"npm run frontend\"",
    "backend": "cd backend && npm start",
    "backend:dev": "cd backend && npm run dev",
    "frontend": "cd frontend && npm start",
    "install-all": "npm install && cd backend && npm install && cd ../frontend && npm install --legacy-peer-deps",
    "build": "cd frontend && GENERATE_SOURCEMAP=false npm run build",
    "deploy": "./deploy.sh",
    "deploy-quick": "npm run build && cp -r frontend/build/* . && systemctl --user restart meditations-backend",
    "restart": "systemctl --user restart meditations-backend",
    "status": "systemctl --user status meditations-backend",
    "logs": "journalctl --user -u meditations-backend -f"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}